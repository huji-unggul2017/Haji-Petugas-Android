<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.l" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- The Color of the Status bar -->

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButtonGreen" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorFollowClick</item>
        <item name="colorControlHighlight">@color/colorFollow</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <style name="MuttonBlue">
        <item name="colorButtonNormal">#ffffff</item>
        <item name="colorControlHighlight">#26000000</item>
        <item name="android:textColorPrimary">#2196F3</item>
    </style>

    <style name="MyButtonPrimary">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>
    <style name="MyButtonRed">
        <item name="colorButtonNormal">#f44336</item>
        <item name="colorControlHighlight">#faa49e</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>
    <style name="MyButtonBlue" >
        <item name="colorButtonNormal">#1976D2</item>
        <item name="colorControlHighlight">#2196F3</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>
</resources>
